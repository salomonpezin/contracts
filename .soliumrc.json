{
  "extends": "solium:recommended",
  "plugins": [
    "security"
  ],
  "rules": {
    "error-reason": 0,
    "operator-whitespace": 0,
    "security/no-block-members": 0,
    "security/no-low-level-calls": [
      "error", [
        "callcode",
        "delegatecall"
      ]
    ],
    "quotes": [
      "error",
      "double"
    ]
  }
}
